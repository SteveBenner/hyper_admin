<div class="row">
  <div class="col-xs-12" ng-controller="FormCtrl as formCtrl">
    <form class="form-horizontal" name="form"
      ng-init="formCtrl.meta.target='<%= url_for([ :admin, resource ])[1..-1] %>';
        formCtrl.meta.method='<%= resource.new_record? ? "post" : "patch" %>'"
      ng-submit="formCtrl.submit()" novalidate>

      <% attributes.each do |key, val| %>
        <div class="form-group has-feedback">
          <label class="col-sm-2 control-label" for="key">
            <%= resource_class.human_attribute_name key %>
          </label>
          <div class="col-sm-10">
            <input class="form-control" name="<%= key %>" type="text"
              placeholder="<%= resource_class.human_attribute_name(key) %>"
              ng-model="formCtrl.resource.<%= key %>">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            <span class="help-block error">
              Please ensure that you provide a valid value for this field.
            </span>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Submit</button>
          <%= link_to "Cancel", [ :admin, resource_class ], class: "btn btn-danger" %>
        </div>
      </div>
    </form>
  </div>
</div>
