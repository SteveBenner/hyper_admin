<div class="row">
  <div class="col-xs-12" ng-controller="FormCtrl as formCtrl">
    <section class="panel panel-danger" ng-if="formCtrl.errors">
      <div class="panel-heading">
        <h3 class="panel-title">Errors occurred</h3>
      </div>

      <div class="panel-body">
        <div ng-repeat="(attr, messages) in formCtrl.errors">
          <h4>{{ attr }}</h4>

          <ul>
            <li ng-repeat="message in messages">{{ message }}</li>
          </ul>
        </div>
      </div>
    </section>

    <form class="form-horizontal" name="form"
      ng-submit="formCtrl.submit()" novalidate>

      <div class="form-group has-feedback" ng-repeat="(attr, human) in formCtrl.resource_class.attributes"
        ng-class="{ 'field_with_errors': !!formCtrl.errors[attr] }">
        <label class="col-sm-2 control-label" for="{{ attr }}">
          {{ humanÂ }}
        </label>

        <div class="col-sm-10" ng-class="{ field_with_errors: !!formCtrl.errors[attr] }">
          <input class="form-control" name="{{ attr }}" type="text" placeholder="{{ human }}"
            ng-model="formCtrl.resource[attr]">
          <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          <span class="help-block error" ng-show="!!formCtrl.errors[attr]">
            {{ formCtrl.errors[attr][0] }}
          </span>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Submit</button>
          <a class="btn btn-danger" ui-sref="list_{{ formCtrl.resource_class.plural }}">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
